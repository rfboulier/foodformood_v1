{% extends 'base.html.twig' %}

    {% block title %}Recommandations | Food for Mood{% endblock %}

    {% block body %}
        <div class="uk-container uk-margin-large-top uk-margin-large-bottom">

            <h1 class="uk-heading-line uk-text-center"><span>Toutes les recommandations</span></h1>

            <div class="uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@m uk-grid-match uk-grid-large"
                 uk-grid>
                {% for reco in recos %}
                    <div>
                        <div
                            class="uk-card uk-card-default uk-card-hover uk-card-body uk-flex uk-flex-column uk-height-1-1">
                            <div class="uk-card-media-top">
                                <img src="{{ asset('img/'~ reco.imageUrl ) }}" alt="{{ reco.title }}">
                            </div>
                            <div class="uk-margin-small-top">
                                <span
                                    class="uk-label uk-margin-small-bottom uk-text-uppercase">{{ reco.type }}</span>
                                <h3 class="uk-card-title">{{ reco.title }}</h3>
                                <p>{{ reco.description|length > 160 ? reco.description|slice(0, 160) ~ '…' : reco.description }}</p>
                            </div>
                            {% if reco.link %}
                                <div class="uk-margin-auto-top">
                                    <a href="{{ reco.link }}" class="uk-button uk-button-text"
                                       target="_blank">Voir le {{ reco.type }}</a>
                                </div>
                            {% endif %}
                            <div class="uk-margin-auto-top">
                                <a href="#" class="uk-button uk-button-text"
                                   target="_blank">En savoir plus →</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="uk-width-1-1">
                        <p class="uk-text-center">Aucune recommandation pour le moment.</p>
                    </div>
                {% endfor %}
            </div>

        </div>
    {% endblock %}
